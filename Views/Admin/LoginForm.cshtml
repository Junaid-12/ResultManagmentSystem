@model ResultMamangementSystem.Models.AdminMo

@{
    ViewData["Title"] = "LoginForm";
}



    <div class="containerData  ">
        <div class="ImgContant ">
            <div>
                <img src="~/img/teacher.png" width="50px" height="50px" />
            </div>
           <div>
                <p>Sign in to TearcherPortal</p>
           </div>
           
        </div>
    <form method="post" id="myForm" novalidate>
        <div class="formdata ">
          <div class="formContaint">
                <div class="row col-10  ">
                    <label class="form-label " for="Name"> User  or Email Address </label>
                    <input type="text" class="form-control" id="Name" asp-for="UserId" required  />
                    <div class="invalid-feedback " >
                        please Enter Your Email
                    </div>
                    
                </div>
                <div class="row  col-10">
                    <label class="form-label" for="Password"> Password</label>
                    <input type="password" class="form-control" id="Password" asp-for="Password" required />
                    <div class="invalid-feedback">
                        please Enter your Password 
                    </div>
                  
                </div>
                <div>
                    @TempData["AlertMessage"]
                    @*  @{
                        if (TempData["AlertMessage"] != null)
                        {
                            <script type="text/javascript"> alert(' @TempData["AlertMessage"]');</script>
                        }
                    } *@
                </div>
                <div class=" row col-10   mt-3">
                    <button type="submit" class="btn btn-success" >Log-In</button>

                </div>
          </div>
                
         
        </div>
    </form>
    </div>


<link href="~/css/loginform.css" rel="stylesheet" />
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />


<script>
    // JavaScript for disabling form submissions if there are invalid fields
    (() => {
        'use strict';

        const form = document.querySelector('#myForm');

        form.addEventListener('submit', (event) => {
            if (!form.checkValidity()) {
                event.preventDefault();
                event.stopPropagation();
            }

            form.classList.add('was-validated');
        });
    })();
  

</script>