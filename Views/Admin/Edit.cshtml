</header>




<div class="formdatad mt-4">
     <div class="Right">
        <form method="post">
            <div class="row col-12 mb-2 ">
                <label class="form-label">Change Student  RollNo</label>
                <input type="text" class="form-control" id="RollNo" asp-for="RollNo" />
            </div>
            <div class="row  col-12 mb-2 ">
                <label class="form-label">Change Student  Name</label>
                <input type="text" class="form-control" id="Name" asp-for="Name" />
            </div>
            <div class="row   col-12 mb-2 ">
                <label class="form-label">Change Student Father Name </label>
                <input type="text" class="form-control" id="FstherName" asp-for="FatherName" />
            </div>
            <div class="row  col-12 mb-2 ">
                <label class="form-label">Change Student Email</label>
                <input type="email" class="form-control" id="Email" asp-for="Email" />
            </div>
            <div class="row  col-12 mb-2 ">
                <label class="form-label">Change Student Email</label>
                <input type="date" class="form-control" id="DateOfBirth"  asp-for="DateOfBirth" />
            </div>
            <div class="row  col-12 mb-2 ">
                <label class="form-label">Change Student Mobile-Number</label>
                <input type="text" class="form-control" id="MobileNo" asp-for="MobileNo" />
            </div>
            <div class="row  col-12 mb-2 ">
                <label class="form-label">Change Student Address </label>
                <input type="text" class="form-control" id="Address" asp-for="Address" />
            </div>

            <div class=" row col-3 mt-2 d-inline">
                <button type="submit" class="btn btn-success">Update</button>
                <button class="btn btn-Danger" asp-action="Index">Cancle</button>
            </div>

        </form>
     </div>
    <div class="imgdata">
        <img src="~/Img/head-slider-boy.svg"  />
     </div>
    </div>


